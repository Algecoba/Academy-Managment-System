<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="720.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.acb.ams.Controllers.Student.StudentMenuController">
   <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="200.0" spacing="10.0" styleClass="menu_container" stylesheets="@../../Styles/StudentMenu.css">
      <FontAwesomeIconView glyphName="BOOK" size="120">
         <VBox.margin>
            <Insets left="40.0" right="40.0" top="10.0" />
         </VBox.margin>
      </FontAwesomeIconView>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="AMS" textAlignment="CENTER" />
      <Separator prefWidth="200.0" />
      <Button fx:id="st_DashboardBtn" mnemonicParsing="false" text="Dashboard">
         <graphic>
            <FontAwesomeIconView glyphName="HOME" />
         </graphic>
      </Button>
      <Button fx:id="st_CursesBtn" mnemonicParsing="false" text="Cursos">
         <graphic>
            <FontAwesomeIconView glyphName="LIST" />
         </graphic>
      </Button>
      <Button fx:id="st_ProfileBtn" mnemonicParsing="false" text="Perfil">
         <graphic>
            <FontAwesomeIconView glyphName="USER" />
         </graphic>
      </Button>
      <Separator prefWidth="200.0" />
      <Button fx:id="st_LogOutBtn" mnemonicParsing="false" text="Log out">
         <graphic>
            <FontAwesomeIconView glyphName="CIRCLE" />
         </graphic>
      </Button>
   </VBox>
</AnchorPane>
